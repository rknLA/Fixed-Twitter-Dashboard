{
  "name": "Fixed Twitter Dashboard",
  "version": "1.0",
  "description": "Apply position:fixed; to the .dashboard element at twitter.com",
  
  "permissions": [
    "tabs",
    "https://*.twitter.com/*",
    "http://*.twitter.com/"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "http://*.twitter.com/"
      ],
      "css": ["fixed-dashboard.css"]
    }
  ]

}
